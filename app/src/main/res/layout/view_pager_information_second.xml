<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:fontFamily="@font/nanumsquarer"
        android:gravity="bottom"
        android:paddingLeft="25dp"
        android:text="COZY 음성비서 이용"
        android:textColor="@color/newbackgroundorangecolor"

        android:textSize="24dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"

        android:layout_weight="3"
        android:scaleType="fitCenter"
        android:src="@drawable/information_touch_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/message_box_information_dialog_2"
            android:fontFamily="@font/nanumsquarer"

            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="무엇이 궁금하세요? 코로나19 관련\n질문을 해보세요!"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <!--<TextView
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/message_box_information_dialog_1"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"

            android:fontFamily="@font/nanumsquarer"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:text="&quot;오늘 확진자 수 알려줘&quot;" />-->

        <TextView
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/message_box_information_dialog_1"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"

            android:fontFamily="@font/nanumsquarer"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:text="&quot;국내 확진자 현황 알려줘&quot;" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/message_box_information_dialog_1"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"

            android:fontFamily="@font/nanumsquarer"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:text="&quot;서울시 광진구 확진자 수 알려줘&quot;"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"

        android:fontFamily="@font/nanumsquarer"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:text="매일 업데이트 되는 코로나19 정보를\n음성으로 질문해보세요!"
        android:textColor="@color/black"

        android:textSize="20dp" />


    </LinearLayout>