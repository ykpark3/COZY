<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:fontFamily="@font/nanumsquarer"
        android:gravity="bottom"
        android:paddingLeft="25dp"
        android:text="주변 확진자 동선 확인"
        android:textColor="@color/newbackgroundorangecolor"

        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/message_box_information_dialog_1"
            android:fontFamily="@font/nanumsquarer"

            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="&quot;주변 확진자 동선 알려줘&quot;"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/message_box_information_dialog_2"
            android:fontFamily="@font/nanumsquarer"
            android:gravity="center_vertical"

            android:paddingLeft="15dp"
            android:text="반경 1km, 2km, 3km 선택\n해주세요."
            android:textColor="@color/black"
            android:textSize="15dp" />


        <TextView
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/message_box_information_dialog_1"
            android:fontFamily="@font/nanumsquarer"

            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="&quot;2km&quot;"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/message_box_information_dialog_2"
            android:fontFamily="@font/nanumsquarer"

            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="2km 이내의 확진자 동선을 \n조회합니다."
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="210dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/message_box_information_dialog_1"
            android:fontFamily="@font/nanumsquarer"

            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="&quot;3km 내에 확진자 수 알려줘!&quot;"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/message_box_information_dialog_2"
            android:fontFamily="@font/nanumsquarer"

            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="3km 이내의 확진자 동선을 \n조회합니다."
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"

        android:fontFamily="@font/nanumsquarer"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:text="사용자 주변 코로나19 확진자 동선\n정보를 음성으로 알려줘요!"
        android:textColor="@color/black"

        android:textSize="20dp" />

</LinearLayout>